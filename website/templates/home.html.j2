{% extends "base.html.j2" %}

{% block title %}Home{% endblock %}

{% block content %}
<section class="w-full pt-16">
  <div class="max-w-6xl mx-auto px-4 flex justify-center">
    <div class="flex flex-col py-8 gap-y-8 items-center w-full">
      <h1 class="font-[Outfit] font-bold text-5xl sm:text-6xl lg:text-7xl xl:text-8xl text-center">
        Get your ideas flowing
      </h1>

      <p class="font-[Outfit] text-lg md:text-xl lg:text-2xl text-center max-w-2xl md:max-w-3xl">
        Write without friction, Noteflow keeps your notes organized and searchable automatically.
      </p>

      <div class="flex gap-4 sm:gap-6 py-3">
        <a
          href="/about"
          class="inline-block bg-[#3F72AF] text-white font-[Outfit] font-bold rounded-3xl px-6 sm:px-8 py-3 text-base sm:text-lg shadow-[0_2px_4px_0_rgba(0,0,0,0.25)] hover:bg-[#112D4E] transition-transform duration-300 hover:scale-105"
        >
          About Us
        </a>
        <a
          href="/contact"
          class="inline-block bg-[#3F72AF] text-white font-[Outfit] font-bold rounded-3xl px-6 sm:px-8 py-3 text-base sm:text-lg shadow-[0_2px_4px_0_rgba(0,0,0,0.25)] hover:bg-[#112D4E] transition-transform duration-300 hover:scale-105"
        >
          Contact
        </a>
      </div>

      <img
        class="rounded-xl shadow-[0_0_12px_0_rgba(0,0,0,0.25)] w-full max-w-4xl h-auto"
        src="{{ url_for('static', filename='img/image.png') }}"
        alt="Noteflow preview"
        loading="lazy"
      />
    </div>
  </div>
</section>
{% endblock %}